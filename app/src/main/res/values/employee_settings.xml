<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayout_Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextView_TipsStyleSp14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor10</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewAsteriskStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/textColor15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/dp_2</item>
        <item name="android:text">*</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditText_Height50dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:background">@color/bg_transparent</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:gravity">start|center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/textColor10</item>
        <item name="android:textColorHint">@color/textColor6</item>
    </style>

    <style name="Clear_ImageViewStyle">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:src">@drawable/icon_clear</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Eye_ImageViewStyle">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:src">@drawable/eye_close</item>
        <item name="android:layout_marginLeft">@dimen/dp_4</item>
    </style>

    <style name="LinearLayout_Height48dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
    </style>

    <style name="TextView_TipsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/textColor8</item>
    </style>

    <style name="TextView_SmallTipsStyle">
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingLeft">@dimen/dp_4</item>
        <item name="android:paddingRight">@dimen/dp_4</item>
        <item name="android:background">@color/bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center|left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/textSize_12</item>
        <item name="android:textColor">@color/textColor4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="switchMinWidth">@dimen/dp_45</item>
        <item name="android:thumb">@drawable/switch_custom_thumb_selector</item>
        <item name="track">@drawable/switch_custom_track_selector</item>
    </style>

