    <style name="ViewDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/bg_divider</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
    </style>

    <style name="TextView_Height50dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@color/bg_transparent</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:gravity">end|center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/textColor10</item>
        <item name="android:textColorHint">@color/textColor6</item>
    </style>

    <style name="ShadowLayout_Width6dp_Corners5dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="sfl_background">@color/color_while</item>
        <item name="sfl_backgroundRound">@dimen/dp_5</item>
        <item name="sfl_offsetY">@dimen/dp_1</item>
        <item name="sfl_shadowColor">@color/bg_shadow_layout</item>
        <item name="sfl_shadowWidth">@dimen/dp_6</item>
    </style>
</resources>