<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/NavigationStyle</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyTextViewStyle</item>
        <item name="android:buttonStyle">@style/MyTextViewStyle</item>
    </style>

    <!--启动页风格-->
    <style name="ThemeSplash" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/star_page</item>
    </style>

    <!--全屏-->
    <style name="ThemeFullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="NavigationIconStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">@dimen/dp_56</item>
        <item name="android:scaleType">center</item>
    </style>

    <!--返回键风格-->
    <style name="NavigationStyle" parent="NavigationIconStyle">
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textCursorDrawable">@drawable/bg_edit_cursor_color</item>
    </style>

    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0_5</item>
        <item name="android:background">@color/bg_divider</item>
    </style>

    <style name="divider_horizontal_crude">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/bg_divider</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_width">@dimen/dp_0_5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_divider</item>
    </style>

    <style name="ll_homepage_item">
