<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_while"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <com.holike.crm.customView.DrawableCenterTextView
            android:id="@+id/tv_deposit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@drawable/choice_down"
            android:drawableRight="@drawable/choice_down"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="@string/customer_deposit_collection_arrow"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_14" />

        <com.holike.crm.customView.DrawableCenterTextView
            android:id="@+id/tv_intention"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@drawable/choice_down"
            android:drawableRight="@drawable/choice_down"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="@string/customer_intention_arrow"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_while"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_orderby_asc"
            android:drawableRight="@drawable/ic_orderby_asc"
            android:gravity="center|start"
            android:text="@string/create_time_tips2"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/mCountTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toEndOf="@+id/tv_create_time"
            android:layout_toRightOf="@+id/tv_create_time"
            android:gravity="center|end"
            android:text="@string/customer_count"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_14" />
    </RelativeLayout>
</LinearLayout>