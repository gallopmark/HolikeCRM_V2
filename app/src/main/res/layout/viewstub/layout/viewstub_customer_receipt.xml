<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_14"
    android:paddingRight="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_name"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toStartOf="@+id/tv_phoneWx"
        android:layout_toLeftOf="@+id/tv_phoneWx"
        android:gravity="center|start"
        android:text="@string/customer_name_tips"
        android:textSize="@dimen/textSize_14" />

    <TextView
        android:id="@+id/tv_phoneWx"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_name"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="start|center"
        android:maxWidth="@dimen/dp_150"
        android:minWidth="@dimen/dp_130"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="@string/customer_phone_tips"
        android:textSize="@dimen/textSize_14" />

    <TextView
        android:id="@+id/tv_address"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center|start"
        android:text="@string/customer_address_tips"
        android:textSize="@dimen/textSize_14" />

    <View
        style="@style/divider_horizontal"
        android:layout_below="@+id/tv_address"
        android:layout_marginTop="@dimen/dp_14" />
</RelativeLayout>