<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/six_angles"
            android:gravity="center"
            android:maxWidth="@dimen/dp_140"
            android:minWidth="@dimen/dp_140"
            android:minHeight="@dimen/dp_130"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_24"
            android:textStyle="bold" />

         <TextView
             android:id="@+id/tv_description"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/dp_6"
             android:gravity="center"
             android:visibility="gone"
             android:textColor="@color/color_while"
             android:textSize="@dimen/textSize_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="start"
            android:text="@string/report_unit"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_14" />

        <pony.xcode.chart.LineChartView
            android:id="@+id/lineChartView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_235"
            android:layout_marginTop="@dimen/dp_18" />

    </LinearLayout>

    <include layout="@layout/include_analysis_report_tips" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/bg_rv_month_pk_header"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/report_table_month"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/report_table_performance"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>