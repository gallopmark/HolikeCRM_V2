<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/followup_reservation_date2"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_reservation_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@drawable/choice_down"
            android:drawableRight="@drawable/choice_down"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center|end"
            android:hint="@string/tips_please_select"
            android:textColor="@color/textColor4"
            android:textColorHint="@color/textColor21"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/followup_product_tips2"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@drawable/choice_down"
            android:drawableRight="@drawable/choice_down"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center|end"
            android:hint="@string/tips_please_select"
            android:textColor="@color/textColor4"
            android:textColorHint="@color/textColor21"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/followup_series_tips2"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_series"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@drawable/choice_down"
            android:drawableRight="@drawable/choice_down"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center|end"
            android:hint="@string/tips_please_select"
            android:textColor="@color/textColor4"
            android:textColorHint="@color/textColor21"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/followup_style_tips2"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@drawable/choice_down"
            android:drawableRight="@drawable/choice_down"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center|end"
            android:hint="@string/tips_please_select"
            android:textColor="@color/textColor4"
            android:textColorHint="@color/textColor21"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:text="@string/tips_customer_remark"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_14"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/bg_transparent"
        android:gravity="top|start"
        android:hint="@string/tips_customer_remark_hint2"
        android:maxLines="5"
        android:minLines="5"
        android:textColor="@color/textColor4"
        android:textColorHint="@color/textColor21"
        android:textSize="@dimen/textSize_14" />

    <View style="@style/divider_horizontal" />
</LinearLayout>