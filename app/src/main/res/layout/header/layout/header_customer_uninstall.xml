<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corners_top_white_5dp"
    android:orientation="vertical">

    <LinearLayout style="@style/LinearLayout_Height48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/followup_reserved_install_date2"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView style="@style/Required_TextViewStyle" />

        <TextView
            android:id="@+id/tv_reserved_install_date"
            style="@style/SelectTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10" />

    <LinearLayout style="@style/LinearLayout_Height48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/followup_reservation_time_tips2"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView style="@style/Required_TextViewStyle" />

        <TextView
            android:id="@+id/tv_reserved_time"
            style="@style/SelectTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10" />

</LinearLayout>