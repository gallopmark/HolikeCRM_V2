<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corners_white_5dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_20"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_20">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_4"
        android:text="@string/dialog_month_data_step_one"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_14"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_blue_dot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_4"
            android:text="@string/dialog_month_data_tips1"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_blue_dot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_4"
            android:text="@string/dialog_month_data_tips2"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_blue_dot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_4"
            android:text="@string/dialog_month_data_tips3"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/dialog_month_data_step_two"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_know"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_clickable_selector"
        android:gravity="center"
        android:text="@string/i_know"
        android:textColor="@color/color_while"
        android:textSize="@dimen/textSize_16"
        android:textStyle="bold" />
</LinearLayout>