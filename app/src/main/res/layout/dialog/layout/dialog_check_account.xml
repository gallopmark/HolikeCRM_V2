<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_corners_white_5dp"
    android:gravity="center"
    android:paddingTop="@dimen/dialog_padding"
    android:paddingBottom="@dimen/dialog_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_cancel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkAccount_search_result"
        android:textColor="@color/textColor5"
        android:textSize="@dimen/textSize_18"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_blue_round" />

        <TextView
            android:id="@+id/tv_dialog_check_account_newDealers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="@string/checkAccount_tips1"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_blue_round" />

        <TextView
            android:id="@+id/tv_dialog_check_account_newAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="@string/checkAccount_tips2"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_blue_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="@string/checkAccount_tips3"
            android:textColor="@color/textColor5"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_dialog_check_account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@drawable/bg_dialog_confirm_button_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_35"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_35"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/goto_login"
        android:textColor="@color/color_while"
        android:textSize="@dimen/textSize_14" />

</LinearLayout>