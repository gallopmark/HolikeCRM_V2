<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_corners_white_5dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/dialog_padding"
    android:paddingBottom="@dimen/dialog_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_cancel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receiving_scan_result_received"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dialog_cancel_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/textColor13"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>


    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/bg_btn_rounded_corner_border_gray"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center|start"
        android:hint="@string/receiving_scan_way_3_hint"
        android:padding="@dimen/dp_5"
        android:textColor="@color/textColor3"
        android:textSize="@dimen/textSize_14"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_dialog_cancel_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_cancel_button_selector"
            android:gravity="center"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/dialog_out"
            android:textColor="@color/textColor5"
            android:textSize="@dimen/textSize_16" />

        <TextView
            android:id="@+id/btn_dialog_cancel_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_confirm_button_selector"
            android:gravity="center"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/dialog_sure"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_16" />

    </LinearLayout>

</LinearLayout>