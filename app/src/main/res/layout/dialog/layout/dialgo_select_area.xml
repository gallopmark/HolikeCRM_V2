<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_30"
        android:background="@drawable/bg_corners_white_5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_select_area_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/dialog_title_select_area"
            android:textStyle="bold"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_18" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dialog_select_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_12"
            android:overScrollMode="never" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_dialog_select_area_close"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/ll_dialog_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_close" />
</RelativeLayout>