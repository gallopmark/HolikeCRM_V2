<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/dp_50"
    android:layout_marginBottom="@dimen/dp_50"
    android:background="@drawable/bg_corners_white_5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_20"
        android:text="@string/dialog_title_default"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_16"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_14"
                android:lineSpacingExtra="@dimen/dp_4"
                android:text="@string/tips_message_confirm_receipt_info"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_receipt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/followup_receipt_time_tips"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_receipt_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="@string/followup_receipt_person_tips"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_receipt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="@string/followup_receipt_category_tips"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_remain_tail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="@string/followup_remain_tail_tips"
                android:textColor="@color/textColor15"
                android:textSize="@dimen/textSize_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_receipt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="@string/followup_receipt_amount_tips"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <LinearLayout
                android:id="@+id/ll_custom_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_custom_product_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followup_custom_products"
                    android:textColor="@color/textColor8"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/tv_custom_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor8"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="@string/tips_customer_remark2"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/v_divider"
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/bg_clickable2_selector"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/back"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_clickable_selector"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/confirm"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>
</LinearLayout>