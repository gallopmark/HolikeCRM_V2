<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_48"
    android:background="@drawable/bg_corners_white_5dp"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <LinearLayout
        android:id="@+id/mRemarkLl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@drawable/ic_blue_point" />

        <TextView
            android:id="@+id/tvRemark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/online_drainage_report_tip1"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mRemarkLl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@drawable/ic_blue_point" />

        <TextView
            android:id="@+id/tvRemark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/online_drainage_report_tip2"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mRemarkLl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@drawable/ic_blue_point" />

        <TextView
            android:id="@+id/tvRemark3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/online_drainage_report_tip2"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="109dp"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@drawable/bg_dialog_confirm_button_selector"
        android:gravity="center"
        android:text="@string/online_drainage_report_confirm"
        android:textColor="@color/color_while"
        android:textStyle="bold" />

</LinearLayout><!--<?xml version="1.0" encoding="utf-8"?>--><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="380dp"--><!--android:layout_height="@dimen/dp_180"--><!--android:background="@drawable/bg_dialog"--><!--android:orientation="vertical">-->

