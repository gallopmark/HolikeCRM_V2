<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Homepage_MonthData_LayoutStyle"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/homepage_new_data"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_16"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_16"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.holike.crm.customView.CircleProgressBar
                android:id="@+id/pb_left"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                app:mCircleBgColor="@color/bg_homepage_pb_complete"
                app:mCircleWidth="@dimen/dp_6"
                app:mProgressColor="@color/textColor14"
                app:mTextColor="@color/textColor14"
                app:mTextSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/tv_date_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/homepage_month_data_complete"
                android:textColor="@color/textColor8" />

            <TextView
                android:id="@+id/tv_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/homepage_month_data_target"
                android:textColor="@color/textColor14"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/homepage_month_data_completed"
                android:textColor="@color/textColor3"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.holike.crm.customView.CircleProgressBar
                android:id="@+id/pb_right"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                app:mCircleBgColor="@color/bg_homepage_pb_translate"
                app:mCircleWidth="@dimen/dp_6"
                app:mProgressColor="@color/bg_homepage_new"
                app:mTextColor="@color/bg_homepage_new"
                app:mTextSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/tv_date_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/homepage_month_data_translate"
                android:textColor="@color/textColor8" />

            <TextView
                android:id="@+id/tv_target_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/homepage_month_data_target"
                android:textColor="@color/bg_homepage_new"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_completed_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/homepage_month_data_completed"
                android:textColor="@color/textColor3"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/textColor6"
        android:textSize="@dimen/textSize_16" />
</LinearLayout>