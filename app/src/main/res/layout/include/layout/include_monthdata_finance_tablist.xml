<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_while"
    android:orientation="vertical">

    <View
        android:id="@+id/v_divider"
        style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_division"
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:text="@string/report_table_divide" />

        <View style="@style/divider_vertical" />

        <TextView
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:text="@string/principal" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_install_area"
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:text="@string/payments_received2" />

        <View style="@style/divider_vertical" />

        <TextView
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:text="@string/deposit" />

        <View style="@style/divider_vertical" />

        <TextView
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:text="@string/contract_payment" />

        <View style="@style/divider_vertical" />

        <TextView
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:text="@string/tail" />

        <View style="@style/divider_vertical" />

        <TextView
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:text="@string/total_contract_amount2" />

        <View style="@style/divider_vertical" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />
</LinearLayout>
