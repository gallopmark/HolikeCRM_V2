<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_receipt"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        android:background="@color/color_while"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sales_order"
                style="@style/tv_item_base_customer_black"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:text="销售单号："
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/tv_creation_date"
                style="@style/tv_item_base_customer_black"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="创建日期："
                android:textSize="@dimen/textSize_12" />
        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_12">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_item_base_customer_black_small"
                    android:text="@string/receipt_and_delivery_lis_operator" />

                <TextView
                    android:id="@+id/tv_warehousing_operator"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_item_base_customer_black_small"
                    android:text="@string/receipt_and_delivery_lis_operation_time" />

                <TextView
                    android:id="@+id/tv_warehousing_operation_time"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_item_base_customer_black_small"
                    android:text="@string/receipt_and_delivery_lis_inventory_statue" />

                <TextView
                    android:id="@+id/tv_inventory_status"

                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="-" />
            </LinearLayout>


        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_12">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_item_base_customer_black_small"
                    android:text="@string/receipt_and_delivery_lis_out_operator" />

                <TextView
                    android:id="@+id/tv_outbound_operator"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_item_base_customer_black_small"
                    android:text="@string/receipt_and_delivery_lis_out_operation_time" />

                <TextView
                    android:id="@+id/tv_outbound_operation_time"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_item_base_customer_black_small"
                    android:text="@string/receipt_and_delivery_lis_out_statue" />

                <TextView
                    android:id="@+id/tv_delivery_statue"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="-" />
            </LinearLayout>


        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_12">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_item_base_customer_black_small"
                    android:text="@string/receipt_and_delivery_lis_total_number_packages" />

                <TextView
                    android:id="@+id/tv_total_number_packages"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_item_base_customer_black_small"
                    android:text="已发包数" />

                <TextView
                    android:id="@+id/tv_send_package"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_item_base_customer_black_small"
                    android:text="已收包数" />

                <TextView
                    android:id="@+id/tv_received_packets"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="-" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>