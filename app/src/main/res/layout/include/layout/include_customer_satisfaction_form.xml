<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:drawableEnd="@drawable/ic_choice_date_down"
        android:drawableRight="@drawable/ic_choice_date_down"
        android:drawablePadding="@dimen/dp_4"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/textSize_14"
        android:textStyle="bold" />

    <com.holike.crm.customView.DrawableCenterTextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/no_result"
        android:drawablePadding="@dimen/dp_50"
        android:text="@string/tips_noresult"
        android:textColor="@color/textColor6"
        android:textSize="@dimen/textSize_16"
        android:visibility="gone" />

    <ViewStub
        android:id="@+id/viewStub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout="@layout/viewstub_customer_satisfaction_form" />
</LinearLayout>