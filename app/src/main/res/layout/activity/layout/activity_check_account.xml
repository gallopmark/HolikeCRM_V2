<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.holike.crm.activity.login.CheckAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_14"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@drawable/ic_back_default" />

        <TextView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/textColor5"
            android:textSize="@dimen/textSize_16" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/login_check_account"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_32" />

    <LinearLayout
        style="@style/ll_enter"
        android:layout_marginTop="@dimen/dp_40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkAccount_oldDealers"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_checkAccount_oldDealers"
                style="@style/et_enter"
                android:layout_weight="1"
                android:hint="@string/checkAccount_oldDealers_et" />

            <ImageView
                android:id="@+id/iv_login_clearOldDealers"
                style="@style/iv_show_password"
                android:src="@drawable/icon_clear" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/dp_8" />
    </LinearLayout>

    <LinearLayout
        style="@style/ll_enter"
        android:layout_marginTop="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkAccount_oldUser"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_checkAccount_oldUser"
                style="@style/et_enter"
                android:layout_weight="1"
                android:hint="@string/checkAccount_oldUser_et" />

            <ImageView
                android:id="@+id/iv_login_clearOldUser"
                style="@style/iv_show_password"
                android:src="@drawable/icon_clear" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/dp_8" />
    </LinearLayout>

    <LinearLayout
        style="@style/ll_enter"
        android:layout_marginTop="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkAccount_oldPassword"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_checkAccount_oldPassword"
                style="@style/et_enter"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:hint="@string/checkAccount_oldPassword_et" />

            <ImageView
                android:id="@+id/iv_login_showpassword"
                style="@style/iv_show_password"
                android:src="@drawable/eye_close" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/dp_8" />
    </LinearLayout>


    <TextView
        android:id="@+id/btn_checkAccount_check"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/bg_btn_login_cannot_click"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/checkAccount_check"
        android:textColor="@color/color_while"
        android:textSize="@dimen/textSize_16" />

</LinearLayout>
