<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.holike.crm.activity.analyze.InstallEvaluateActivity">

    <include layout="@layout/include_titlebar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/textSize_14"
        android:text="2018年04月27日-2018年05月09日" />

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/color_while"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_install_evaluate_area1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_install_evaluate_area1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="四大区"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:id="@+id/iv_install_evaluate_area1"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_11"
                android:rotation="180"
                android:src="@drawable/choice_down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_install_evaluate_deposit_area2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_install_evaluate_deposit_area2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:id="@+id/iv_install_evaluate_deposit_area2"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_11"
                android:rotation="180"
                android:src="@drawable/choice_down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_install_evaluate_customer_area3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_install_evaluate_customer_area3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:id="@+id/iv_install_evaluate_customer_area3"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_11"
                android:rotation="180"
                android:src="@drawable/choice_down" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/dv_install_evaluate_filter"
        style="@style/divider_horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_install_evaluate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />
</LinearLayout>
