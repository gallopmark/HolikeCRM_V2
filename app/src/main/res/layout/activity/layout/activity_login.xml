<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.holike.crm.activity.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24">

        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_account"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_login_account"
                style="@style/et_enter"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/login_account_et" />

            <ImageView
                android:id="@+id/iv_login_clearAccount"
                style="@style/iv_show_password"
                android:src="@drawable/icon_clear"
                android:visibility="invisible" />
        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_password"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_login_password"
                style="@style/et_enter"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/login_password_et"
                android:inputType="textPassword" />


            <ImageView
                android:id="@+id/iv_login_showpassword"
                style="@style/iv_show_password"
                android:src="@drawable/eye_close" />

        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <TextView
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/bg_btn_login_cannot_click"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/login_title"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_16" />

        <TextView
            android:id="@+id/tv_login_check_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_5"
            android:text="@string/login_check_account"
            android:textColor="@color/textColor5"
            android:textSize="@dimen/textSize_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tips_current_version"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/textColor21"
        android:textSize="@dimen/textSize_14" />
</LinearLayout>
