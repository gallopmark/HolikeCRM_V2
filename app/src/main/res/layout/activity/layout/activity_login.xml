<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.holike.crm.activity.login.LoginActivity">


    <ImageView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_64"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        style="@style/ll_enter"
        android:layout_marginTop="@dimen/dp_40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor4"
                android:text="@string/login_account"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_16" />

            <EditText
                android:id="@+id/et_login_account"
                style="@style/et_enter"
                android:layout_weight="1"
                android:hint="@string/login_account_et" />

            <ImageView
                android:id="@+id/iv_login_clearAccount"
                style="@style/iv_show_password"
                android:visibility="invisible"
                android:src="@drawable/icon_clear" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/dp_8" />
    </LinearLayout>

    <LinearLayout
        style="@style/ll_enter"
        android:layout_marginTop="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_password"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_login_password"
                style="@style/et_enter"
                android:layout_weight="1"
                android:hint="@string/login_password_et"
                android:inputType="textPassword" />


            <ImageView
                android:id="@+id/iv_login_showpassword"
                style="@style/iv_show_password"
                android:src="@drawable/eye_close" />

        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/dp_8" />
    </LinearLayout>


    <TextView
        android:id="@+id/btn_login_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/bg_btn_login_cannot_click"
        android:gravity="center"
        android:enabled="false"
        android:text="@string/login_title"
        android:textColor="@color/color_while"
        android:textSize="@dimen/textSize_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_login_check_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/textColor5"
            android:text="@string/login_check_account" />
    </LinearLayout>
</LinearLayout>
