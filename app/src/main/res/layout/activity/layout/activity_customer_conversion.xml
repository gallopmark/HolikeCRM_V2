<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <include layout="@layout/include_common_tablayout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_while">

        <TextView
            android:id="@+id/tv_select_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/choice_down"
            android:drawableRight="@drawable/choice_down"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:gravity="center"
            android:paddingRight="@dimen/dp_10"
            android:text="@string/all_stores"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>