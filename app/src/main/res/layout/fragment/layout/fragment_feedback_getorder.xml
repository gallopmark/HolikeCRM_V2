<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <View style="@style/divider_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/feedback_getorder_top"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/obtain_top" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/feedback_getorder_way"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/feedback_getorder_way1"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/obtain1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/feedback_getorder_way2"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/obtain2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/feedback_getorder_way3"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/obtain3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/feedback_getorder_way4"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/obtain4" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>