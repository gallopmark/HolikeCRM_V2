<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <include
        layout="@layout/include_empty_page"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center|left"

        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_16"
            android:background="@color/textColor14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="账户概览"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_shadow_layer_radius6dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ll_item_base_customer"
            android:layout_height="@dimen/dp_48"
            android:background="@color/bg_transparent">

            <TextView
                style="@style/tv_item_base_customer_left"
                android:text="@string/credit_inquiry_line_of_credit" />


            <TextView
                android:id="@+id/t1"
                style="@style/tv_item_base_customer_right"
                android:hint="@string/credit_inquiry_money_0" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12" />

        <LinearLayout
            style="@style/ll_item_base_customer"
            android:layout_height="@dimen/dp_48"
            android:background="@color/bg_transparent">

            <TextView
                style="@style/tv_item_base_customer_left"
                android:text="@string/credit_inquiry_the_total_amount_of_orders_in_transit" />

            <TextView
                android:id="@+id/t2"
                style="@style/tv_item_base_customer_right"
                android:hint="@string/credit_inquiry_money_0" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12" />

        <LinearLayout
            style="@style/ll_item_base_customer"
            android:layout_height="@dimen/dp_48"
            android:background="@color/bg_transparent">

            <TextView
                style="@style/tv_item_base_customer_left"
                android:text="@string/credit_inquiry_available_balance" />

            <TextView
                android:id="@+id/t3"
                style="@style/tv_item_base_customer_right"
                android:hint="@string/credit_inquiry_money_0" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center|left"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_16"
            android:background="@color/textColor14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="明细列表"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_shadow_layer_radius6dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="351">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="127">

                <TextView
                    style="@style/tv_item_base_customer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:lineSpacingExtra="0dp"
                    android:text="订单号" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="100">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/tv_item_base_customer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="0dp"
                    android:maxLines="1"
                    android:text="出厂价折前(元)" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="124">

                <TextView
                    style="@style/tv_item_base_customer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="出厂价折后(元)" />
            </FrameLayout>


        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="351">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="127">

                <TextView
                    style="@style/tv_item_base_customer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:lineSpacingExtra="0dp"
                    android:text="合计" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="100">

                <TextView
                    android:id="@+id/tv_factory_discount_bf"
                    style="@style/tv_item_base_customer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="124">

                <TextView
                    android:id="@+id/tv_factory_discount_af"
                    style="@style/tv_item_base_customer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>


        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl_detail_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</LinearLayout>