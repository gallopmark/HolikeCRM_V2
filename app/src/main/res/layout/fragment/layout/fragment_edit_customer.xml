<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/include_fragment_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_12">

                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_16"
                    android:background="@color/textColor14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:text="客户信息"
                    android:textColor="@color/textColor4"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />
            </LinearLayout>

            <include layout="@layout/include_cutomer_message" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:padding="@dimen/dp_12">

        <TextView
            android:id="@+id/btn_baseCustomer_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/bg_btn_login_can_click"
            android:gravity="center"
            android:text="@string/receive_deposit_save"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>