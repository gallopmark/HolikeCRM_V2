<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/include_fragment_title_bar" />

    <include
        layout="@layout/include_empty_page"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:text="物流路线"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_logistics_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_16" />

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/dp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:text="物流站"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_logistics_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_16" />

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/dp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:text="物流公司"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_logistics_frim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_16" />

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/dp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:text="物流公司地址"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_logistics_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_16" />

    </LinearLayout>
</LinearLayout>