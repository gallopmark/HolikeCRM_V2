<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_translate_report_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_while"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <TextView
        android:id="@+id/tv_translate_report_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:textColor="@color/textColor6"
        android:textSize="@dimen/textSize_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:text="@string/translate_report_table_content"
        android:textColor="@color/textColor6"
        android:textSize="@dimen/textSize_14" />

    <LinearLayout
        android:id="@+id/ll_item_rv_translate_report"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="vertical">

        <View
            android:id="@+id/dv_item_rv_translate_report_top"
            style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="59"
                android:gravity="center"
                android:text="@string/report_table_divide"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="51"
                android:gravity="center"
                android:text="@string/report_table_head"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:text="@string/report_table_deposit"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="47"
                android:gravity="center"
                android:text="@string/report_table_translate_order"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="48"
                android:gravity="center"
                android:text="@string/report_table_untranslate_order"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="47"
                android:gravity="center"
                android:text="@string/report_table_translate"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:gravity="center"
                android:text="@string/report_table_rank"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

        </LinearLayout>

        <View
            android:id="@+id/dv_item_rv_translate_report_bottom"
            style="@style/divider_horizontal" />
    </LinearLayout>

    <include
        layout="@layout/include_empty_page"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_translate_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:overScrollMode="never" />
</LinearLayout>