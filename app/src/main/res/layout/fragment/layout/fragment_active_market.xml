<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_active_market"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_fragment_title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_performance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44" />

        <com.grallopmark.tablayout.SlidingTabLayout
            android:id="@+id/tab_active_market_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tl_indicator_color="@color/textColor5"
            app:tl_indicator_corner_radius="@dimen/dp_2"
            app:tl_indicator_height="@dimen/dp_4"
            app:tl_indicator_width="@dimen/dp_32"
            app:tl_tab_width="80dp"
            app:tl_textBold="BOTH"
            app:tl_textSelectColor="@color/textColor5"
            app:tl_textUnselectColor="#cccccc"
            app:tl_textSize="@dimen/textSize_16" />
    </FrameLayout>

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_active_market_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_18"
            android:textStyle="bold" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/btn_active_market_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_rounded_corner_border_4"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_6">

            <TextView
                android:id="@+id/tv_active_market_select_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor5"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_9"
                android:src="@drawable/ranking_up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_active_market_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/report_active_market_days"
                android:textColor="@color/textColor6"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_active_market_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/report_active_market_order_num"
                android:textColor="@color/textColor6"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_active_market_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="vertical">

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="63"
                android:gravity="center"
                android:text="@string/report_table_center"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="61"
                android:gravity="center"
                android:text="@string/report_table_active_market"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="61"
                android:gravity="center"
                android:orientation="vertical"
                android:text="@string/report_table_serve_city"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12">

            </TextView>

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="84"
                android:gravity="center"
                android:text="@string/report_table_serve_date"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="34"
                android:gravity="center"
                android:text="@string/report_table_days"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="47"
                android:gravity="center"
                android:text="@string/report_table_order_num"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />
        </LinearLayout>

        <View style="@style/divider_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_active_market_personal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="vertical">

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="91"
                android:gravity="center"
                android:text="@string/report_table_serve_city"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="116"
                android:gravity="center"
                android:text="@string/report_table_serve_date"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />


            <View style="@style/divider_vertical" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="66"
                android:gravity="center"
                android:text="@string/report_table_days"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="77"
                android:gravity="center"
                android:text="@string/report_table_order_num"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />
        </LinearLayout>

        <View style="@style/divider_horizontal" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_active_market"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:overScrollMode="never" />
</LinearLayout>