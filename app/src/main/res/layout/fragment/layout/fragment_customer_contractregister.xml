<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_f3"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_corners_white_5dp"
            android:orientation="vertical">

            <LinearLayout style="@style/LinearLayout_Height48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/customer_date_of_signing_tips2"
                    android:textColor="@color/textColor4"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold" />

                <TextView style="@style/Required_TextViewStyle" />

                <TextView
                    android:id="@+id/tv_sign_date"
                    style="@style/SelectTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout style="@style/LinearLayout_Height48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/followup_turnover_tips2"
                    android:textColor="@color/textColor4"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold" />

                <TextView style="@style/Required_TextViewStyle" />

                <EditText
                    android:id="@+id/et_turnover"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bg_transparent"
                    android:gravity="center|end"
                    android:hint="@string/receive_deposit_depositAmount_et"
                    android:inputType="numberDecimal"
                    android:textColor="@color/textColor4"
                    android:textColorHint="@color/textColor21"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>


            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <TextView
                android:id="@+id/tv_receipt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center|start"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/followup_deposit_received_tips2"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />


            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout style="@style/LinearLayout_Height48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/followup_this_payment_tips2"
                    android:textColor="@color/textColor4"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold" />

                <TextView style="@style/Required_TextViewStyle" />

                <EditText
                    android:id="@+id/et_this_payment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bg_transparent"
                    android:gravity="center|end"
                    android:hint="@string/receive_deposit_depositAmount_et"
                    android:inputType="numberDecimal"
                    android:textColor="@color/textColor4"
                    android:textColorHint="@color/textColor21"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>


            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout style="@style/LinearLayout_Height48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/followup_remain_tail_tips"
                    android:textColor="@color/textColor4"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold" />

                <TextView
                    style="@style/Required_TextViewStyle"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:paddingTop="0dp"
                    android:text="@string/tips_rmb" />

                <TextView
                    android:id="@+id/tv_remain_tail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bg_transparent"
                    android:gravity="center|start"
                    android:textColor="@color/textColor4"
                    android:textColorHint="@color/textColor21"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout style="@style/LinearLayout_Height48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/customer_contract_delivery_time_tips"
                    android:textColor="@color/textColor4"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold" />

                <TextView style="@style/Required_TextViewStyle" />

                <TextView
                    android:id="@+id/tv_delivery_time"
                    style="@style/SelectTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>


            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout style="@style/LinearLayout_Height48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/followup_contractor_tips2"
                    android:textColor="@color/textColor4"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold" />

                <TextView style="@style/Required_TextViewStyle" />

                <TextView
                    android:id="@+id/tv_contractor"
                    style="@style/SelectTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>


            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18"
                android:text="@string/tips_customer_remark"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@color/bg_transparent"
                android:gravity="top|start"
                android:hint="@string/tips_customer_remark_hint2"
                android:maxLines="5"
                android:minLines="5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/textColor4"
                android:textColorHint="@color/textColor21"
                android:textSize="@dimen/textSize_14" />


            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/include_savelayout_56dp" />
</LinearLayout>