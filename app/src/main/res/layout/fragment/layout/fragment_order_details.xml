<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.holike.crm.activity.homepage.OrderDetailsActivity">

    <include layout="@layout/include_titlebar" />

    <include
        layout="@layout/include_empty_page"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/mContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_while"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/divider_horizontal"
                android:layout_height="@dimen/dp_12"
                android:background="@color/bg" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_number" />

                <TextView
                    android:id="@+id/tv_order_details_order_number"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_type" />

                <TextView
                    android:id="@+id/tv_order_details_order_type"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_time" />

                <TextView
                    android:id="@+id/tv_order_details_order_time"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_people" />

                <TextView
                    android:id="@+id/tv_order_details_order_people"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_state" />

                <TextView
                    android:id="@+id/tv_order_details_order_state"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_isAllDelivery" />

                <TextView
                    android:id="@+id/tv_order_details_order_isAllDelivery"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_isUrgent" />

                <TextView
                    android:id="@+id/tv_order_details_order_isUrgent"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_delivery_time" />

                <TextView
                    android:id="@+id/tv_order_details_order_delivery_time"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_height="@dimen/dp_12"
                android:background="@color/bg" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_area" />

                <TextView
                    android:id="@+id/tv_order_details_order_area"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />
            <!--  ..................  -->

            <LinearLayout
                android:id="@+id/ll_order_details_order_recommended_retail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/ll_item_base_customer">

                    <TextView
                        style="@style/tv_item_base_customer_left"
                        android:text="@string/order_details_order_recommended_retail_price" />

                    <TextView
                        android:id="@+id/tv_order_details_order_recommended_retail_price"
                        style="@style/tv_item_base_customer_right" />
                </LinearLayout>

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginLeft="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_details_order_dealer_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/ll_item_base_customer">

                    <TextView
                        style="@style/tv_item_base_customer_left"
                        android:text="@string/order_details_order_dealer_factor" />

                    <TextView
                        android:id="@+id/tv_order_details_order_dealer_factor"
                        style="@style/tv_item_base_customer_right" />
                </LinearLayout>

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginLeft="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_details_order_amount_of_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/ll_item_base_customer">

                    <TextView
                        style="@style/tv_item_base_customer_left"
                        android:text="@string/order_details_order_amount_of_discount" />

                    <TextView
                        android:id="@+id/tv_order_details_order_amount_of_discount"
                        style="@style/tv_item_base_customer_right" />
                </LinearLayout>

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginLeft="@dimen/dp_12" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_order_details_order_total_price_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/ll_item_base_customer">

                    <TextView
                        style="@style/tv_item_base_customer_left"
                        android:text="@string/order_details_order_total_price_before_delivery_discount" />

                    <TextView
                        android:id="@+id/tv_order_details_order_total_price_before"
                        style="@style/tv_item_base_customer_right" />
                </LinearLayout>

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginLeft="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_details_order_total_price_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/ll_item_base_customer">

                    <TextView
                        style="@style/tv_item_base_customer_left"
                        android:text="@string/order_details_order_total_price_after_delivery_discount" />

                    <TextView
                        android:id="@+id/tv_order_details_order_total_price_after"
                        style="@style/tv_item_base_customer_right" />
                </LinearLayout>

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginLeft="@dimen/dp_12" />
            </LinearLayout>


            <!--  ..................  -->

            <View
                style="@style/divider_horizontal"
                android:layout_height="@dimen/dp_12"
                android:background="@color/bg" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_customer_name" />

                <TextView
                    android:id="@+id/tv_order_details_order_customer_name"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_customer_phone" />

                <TextView
                    android:id="@+id/tv_order_details_order_customer_phone"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout
                style="@style/ll_item_base_customer"
                android:visibility="visible">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_district" />

                <TextView
                    android:id="@+id/tv_order_details_order_district"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_community_name" />

                <TextView
                    android:id="@+id/tv_order_details_order_community_name"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />


            <LinearLayout style="@style/ll_item_base_customer">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_address" />

                <TextView
                    android:id="@+id/tv_order_details_order_address"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="@dimen/dp_12" />


            <LinearLayout
                style="@style/ll_item_base_customer"
                android:visibility="gone">

                <TextView
                    style="@style/tv_item_base_customer_left"
                    android:text="@string/order_details_order_price" />

                <TextView
                    android:id="@+id/tv_order_details_order_price"
                    style="@style/tv_item_base_customer_right" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_height="@dimen/dp_40"
                android:background="@color/bg" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
