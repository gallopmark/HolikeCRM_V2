<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ShadowBg_Radius6dp_Padding18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_7"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/house_manage_order_money"
                        android:textColor="@color/textColor4"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="*"
                        android:textColor="@color/textColor15"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_signed_order_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center"
                        android:hint="@string/receive_deposit_depositAmount_et"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/textColor4"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_signed_deposit_money"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center|left"
                    android:maxLength="20"
                    android:text="@string/house_manage_deposit_money"
                    android:textColor="@color/textColor4"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold" />

                <View style="@style/divider_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/homepage_month_data_order_money"
                        android:textColor="@color/textColor4"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="*"
                        android:textColor="@color/textColor15"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_signed_collected_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center"
                        android:hint="@string/receive_deposit_depositAmount_et"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/textColor4"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/house_manage_uncollect_money"
                        android:textColor="@color/textColor4"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_signed_uncollect_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:maxLength="20"
                        android:textColor="@color/textColor15"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                </LinearLayout>

                <View style="@style/divider_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/house_manage_install_time"
                        android:textColor="@color/textColor4"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="*"
                        android:textColor="@color/textColor15"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_signed_install_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:hint="@string/receive_deposit_select"
                        android:textColor="@color/textColor4"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <View style="@style/divider_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/house_manage_need_remeasure"
                        android:textColor="@color/textColor4"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="*"
                        android:textColor="@color/textColor15"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_signed_need_remeasure"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:hint="@string/receive_deposit_select"
                        android:textColor="@color/textColor4"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <View style="@style/divider_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center|left"
                    android:text="@string/house_manage_note"
                    android:textColor="@color/textColor4"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_signed_note"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/house_manage_note_et"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold" />

                <View style="@style/divider_horizontal" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_signed_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_7" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_7" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:padding="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_signed_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/bg_btn_login_can_click"
            android:gravity="center"
            android:text="@string/receive_deposit_save"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>