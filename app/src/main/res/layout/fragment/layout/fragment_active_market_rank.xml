<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_active_market_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/include_fragment_title_bar" />

    <TextView
        android:id="@+id/tv_active_market_rank_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="left|center"
        android:textColor="@color/textColor6"
        android:textSize="@dimen/textSize_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="vertical">

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:text="@string/report_table_rank"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="79"
                android:gravity="center"
                android:text="@string/report_table_divide"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="79"
                android:gravity="center"
                android:text="@string/report_table_center"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="79"
                android:gravity="center"
                android:text="@string/report_table_active_market"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="61"
                android:gravity="center"
                android:text="@string/report_table_achievements"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <View style="@style/divider_vertical" />

        </LinearLayout>

        <View style="@style/divider_horizontal" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_active_market_rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:overScrollMode="never" />
</LinearLayout>