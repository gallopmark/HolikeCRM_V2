<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_write_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center|left"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@color/bg_state_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/report_active_market_write_city_write"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        style="@style/ShadowBg_Radius6dp_Padding18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_6"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务城市："
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/tv_write_city_service_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:hint="@string/receive_deposit_select"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16" />
        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务日期："
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/tv_write_city_service_data"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:hint="@string/receive_deposit_select"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_16" />
        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <TextView
            android:id="@+id/btn_write_city_save"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/bg_btn_rounded_corners_select_5"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:gravity="center|left"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@color/bg_state_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/report_active_market_write_city_list"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="vertical">

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="117"
                android:gravity="center"
                android:text="@string/report_table_serve_city"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12"
                android:textStyle="bold" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="147"
                android:gravity="center"
                android:text="@string/report_table_serve_date"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12"
                android:textStyle="bold" />

            <View style="@style/divider_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="86"
                android:gravity="center"
                android:text="@string/report_table_operate"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12"
                android:textStyle="bold" />
            <View style="@style/divider_vertical" />
        </LinearLayout>

        <View style="@style/divider_horizontal" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_write_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:overScrollMode="never" />
</LinearLayout>