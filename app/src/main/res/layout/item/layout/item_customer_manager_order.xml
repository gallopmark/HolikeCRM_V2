<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_corners_white_5dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_order_number"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:drawablePadding="@dimen/dp_10"
        android:text="@string/order_number_tips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_person"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/order_player_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_number"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_order_time"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/order_time_tips"
        app:layout_constraintStart_toEndOf="@+id/tv_order_person"
        app:layout_constraintTop_toTopOf="@+id/tv_order_person"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_space"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="@string/order_space_tips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_person"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_order_status"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/order_status_tips"
        app:layout_constraintBottom_toBottomOf="@+id/tv_space"
        app:layout_constraintStart_toEndOf="@+id/tv_space"
        app:layout_constraintTop_toTopOf="@+id/tv_space"
        app:layout_constraintWidth_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>
