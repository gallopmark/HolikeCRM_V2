<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_corners_white_5dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    tools:ignore="RtlSymmetry">

    <include
        android:id="@+id/title_layout"
        layout="@layout/item_customer_manager_title" />

    <TextView
        android:id="@+id/tv_house_area"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/followup_house_area_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_house_type"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:text="@string/followup_house_type_tips"
        app:layout_constraintStart_toEndOf="@+id/tv_house_area"
        app:layout_constraintTop_toTopOf="@+id/tv_house_area"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_house_price"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/followup_house_price_square"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_house_type"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_budget"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/followup_communication_budget_tips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_house_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_house_type"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_family_member_tips"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/followup_family_member_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_house_price" />

    <TextView
        android:id="@+id/tv_family_member"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_family_member_tips"
        app:layout_constraintTop_toTopOf="@+id/tv_family_member_tips" />

    <TextView
        android:id="@+id/tv_custom_space_tips"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/followup_custom_space_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_family_member" />

    <TextView
        android:id="@+id/tv_custom_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_custom_space_tips"
        app:layout_constraintTop_toTopOf="@+id/tv_custom_space_tips" />

    <TextView
        android:id="@+id/tv_household_demand_tips"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/followup_household_demand_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_custom_space" />

    <TextView
        android:id="@+id/tv_household_demand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_household_demand_tips"
        app:layout_constraintTop_toTopOf="@+id/tv_household_demand_tips" />


    <TextView
        android:id="@+id/tv_decoration_style"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/followup_decoration_style_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_household_demand"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_house_status"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/followup_house_status_tips"
        app:layout_constraintStart_toEndOf="@+id/tv_decoration_style"
        app:layout_constraintTop_toTopOf="@+id/tv_decoration_style"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_decoration_progress"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/followup_decoration_progress_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_decoration_style"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_plan_stay"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/followup_plan_to_stay_tips"
        app:layout_constraintStart_toEndOf="@+id/tv_decoration_progress"
        app:layout_constraintTop_toTopOf="@+id/tv_decoration_progress"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_actual_gauge"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/followup_actual_gauge_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_decoration_progress"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_measure_shop"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/followup_measure_store_tips"
        app:layout_constraintStart_toEndOf="@+id/tv_actual_gauge"
        app:layout_constraintTop_toTopOf="@+id/tv_actual_gauge"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_ruler"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/customer_ruler_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_actual_gauge"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_reservation_drawing"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/followup_reservation"
        app:layout_constraintStart_toEndOf="@+id/tv_ruler"
        app:layout_constraintTop_toTopOf="@+id/tv_ruler"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tv_remark_tips"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/tips_customer_remark2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ruler" />

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_remark_tips"
        app:layout_constraintTop_toTopOf="@+id/tv_remark_tips" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_remark">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_more_pictures"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@color/bg"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/more_pictures"
                android:textColor="@color/textColor14"
                android:textSize="@dimen/textSize_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_edit_measure_result"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@drawable/bg_bg_corners4dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:text="@string/edit"
                android:textColor="@color/textColor14"
                android:textSize="@dimen/textSize_14"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
