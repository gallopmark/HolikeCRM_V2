<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/horizontalscrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <TextView
                    android:id="@+id/item_tv_project_line_number"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="010"
                    android:textSize="13sp" />

                <FrameLayout
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4">

                    <com.holike.crm.customView.JustifyTextView
                        android:id="@+id/item_tv_material_description_material"
                        style="@style/tv_item_base_customer_gray_small"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:text="吸塑装饰板吸塑装饰板"
                        android:textSize="13sp" />
                </FrameLayout>


                <TextView
                    android:id="@+id/item_tv_color"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="赤杨-曼特宁"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_tv_length"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="8946"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_tv_with"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="8946"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_tv_thick"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="8946"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_tv_count"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="8946"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_tv_unit"
                    style="@style/tv_item_base_customer_gray_small"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="块"
                    android:textSize="13sp" />

            </LinearLayout>
            <View style="@style/divider_horizontal"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_44"/>
        </FrameLayout>


    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>