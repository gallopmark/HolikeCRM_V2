<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/bg_corners_white_5dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:gravity="center|start"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_38"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_upload_date"
            style="@style/Customer_Item_TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="@string/followup_upload_scheme"
            android:textColor="@color/textColor15" />

    </LinearLayout>

    <include layout="@layout/item_rv_customer_status_list_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_source"
            style="@style/Customer_Item_TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/customer_source_tips" />

        <TextView
            android:id="@+id/tv_designer"
            style="@style/Customer_Item_TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/followup_designer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reservation"
            style="@style/Customer_Item_TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/followup_reservation"
            android:textColor="@color/textColor15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_countdown"
            style="@style/Customer_Item_TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_weight="1"
            android:text="@string/customer_countdown_tips"
            android:textColor="@color/textColor15"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
