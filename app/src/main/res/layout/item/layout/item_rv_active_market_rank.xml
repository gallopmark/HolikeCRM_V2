<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_rv_active_market_rank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <View style="@style/divider_vertical" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <TextView
                android:id="@+id/tv_item_rv_active_market_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/report_table_rank"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_12" />

            <ImageView
                android:id="@+id/iv_item_rv_active_market_rank"
                android:layout_width="@dimen/dp_19"
                android:layout_height="23dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_item_rv_active_market_rank_divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="79"
            android:gravity="center"
            android:text="@string/report_table_divide"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_12" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_item_rv_active_market_rank_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="79"
            android:gravity="center"
            android:text="@string/report_table_center"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_12" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_item_rv_active_market_rank_active_market"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="79"
            android:gravity="center"
            android:text="@string/report_table_active_market"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_12" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_item_rv_active_market_rank_achievements"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="61"
            android:gravity="center"
            android:text="@string/report_table_achievements"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_12" />

        <View style="@style/divider_vertical" />

    </LinearLayout>

    <View style="@style/divider_horizontal" />
</LinearLayout>