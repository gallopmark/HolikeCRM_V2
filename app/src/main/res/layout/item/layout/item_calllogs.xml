<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_call_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tips_call_time"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tips_call_duration"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:text="@string/tips_call_dialer"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/textSize_14" />

    <View
        android:id="@+id/v_divider"
        style="@style/divider_horizontal" />
</LinearLayout>