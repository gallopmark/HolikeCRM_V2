<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_product_info_content_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_44"
        android:weightSum="375"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_weight="90"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_operation_log_space_nick"
                style="@style/tv_item_base_customer_gray"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="@string/no_value" />
        </FrameLayout>

        <FrameLayout
            android:layout_weight="90"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_operation_log_log"
                style="@style/tv_item_base_customer_gray"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:layout_gravity="center"
                android:text="@string/no_value" />
        </FrameLayout>

        <FrameLayout
            android:layout_weight="90"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_operation_log_operator"
                style="@style/tv_item_base_customer_gray"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="@string/no_value" />
        </FrameLayout>

        <FrameLayout
            android:layout_weight="90"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_operation_log_time"
                style="@style/tv_item_base_customer_gray"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="@string/no_value" />
        </FrameLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_footer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/textColor20"/>


</LinearLayout>