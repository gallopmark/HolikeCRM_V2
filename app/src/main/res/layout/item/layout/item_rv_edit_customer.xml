<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_rv_edit_customer"
            android:layout_width="29dp"
            android:layout_height="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/edit_new" />

        <TextView
            android:id="@+id/tv_item_rv_edit_customer_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="跟进情况："
            android:textColor="@color/textColor10"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_rv_edit_customer_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="跟进人："
            android:textColor="@color/textColor10"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_rv_edit_customer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_18"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/textSize_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_rv_edit_customer_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor11"
            android:textSize="@dimen/textSize_12" />

    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/dp_12" />
</LinearLayout>