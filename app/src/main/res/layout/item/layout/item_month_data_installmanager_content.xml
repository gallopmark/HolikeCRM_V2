<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="@dimen/dp_44"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_install_count"
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:textColor="@color/textColor8" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_install_area"
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:textColor="@color/textColor8" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_completion_rate"
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:textColor="@color/textColor8" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_satisfaction"
            style="@style/Scrollable_TextViewStyle"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:textColor="@color/textColor8" />

        <View style="@style/divider_vertical" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />
</LinearLayout>
