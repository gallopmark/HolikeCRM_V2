<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_corners_white_5dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <include
        android:id="@+id/title_layout"
        layout="@layout/item_customer_manager_title" />

    <TextView
        android:id="@+id/tv_reservation_time"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/followup_reservation_time_tips" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_measure_store_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/followup_measure_store_tips"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_measure_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_ruler_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="@string/customer_ruler_tips"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_ruler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_13"
            android:gravity="center|start" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_measure_space_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/followup_measure_space_tips"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_measure_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_4"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_remark_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tips_customer_remark2"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_4"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_edit_unmeasured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/bg_bg_corners4dp"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_6"
        android:layout_gravity="end"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_6"
        android:text="@string/edit"
        android:textColor="@color/textColor14"
        android:textSize="@dimen/textSize_13"
        android:visibility="gone" />

</LinearLayout>
