<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:id="@+id/ll_item_rv_order_ranking"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View style="@style/divider_vertical" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="46">

            <TextView
                android:id="@+id/tv_item_rv_order_ranking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_12" />

            <ImageView
                android:id="@+id/iv_item_rv_order_ranking"
                android:layout_width="@dimen/dp_19"
                android:layout_height="23dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_item_rv_order_ranking_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="81"
            android:gravity="center"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_12" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_item_rv_order_ranking_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="74"
            android:gravity="center"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_12" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_item_rv_order_ranking_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="67"
            android:gravity="center"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_12" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_item_rv_order_ranking_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="67"
            android:gravity="center"
            android:textColor="@color/textColor12"
            android:textSize="@dimen/textSize_12" />

        <View style="@style/divider_vertical" />

    </LinearLayout>

    <View
        android:id="@+id/dv_item_rv_translate_report_bottom"
        style="@style/divider_horizontal" />
</LinearLayout>