        android:gravity="center|left"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/textSize_14" />

    <View
        android:id="@+id/dv_item_rv_popup_filter"
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/dp_12" />
</LinearLayout>