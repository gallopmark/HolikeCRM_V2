<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:minHeight="@dimen/dp_50">

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_division"
            style="@style/Scrollable_TextViewStyle2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_service_satisfaction"
            style="@style/Scrollable_TextViewStyle2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_design_satisfaction"
            style="@style/Scrollable_TextViewStyle2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_delivery_satisfaction"
            style="@style/Scrollable_TextViewStyle2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_install_satisfaction"
            style="@style/Scrollable_TextViewStyle2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View style="@style/divider_vertical" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />
</LinearLayout>