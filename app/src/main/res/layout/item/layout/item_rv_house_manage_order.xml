<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemContainer"
    style="@style/Customer_ItemStyle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_rv_house_manage_order_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/textSize_12" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_3"
            android:rotation="270"
            android:src="@drawable/choice_down"
            android:tint="@color/textColor14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_rv_house_manage_order_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_12"
        android:singleLine="true"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/textSize_12" />

    <TextView
        android:id="@+id/tv_item_rv_house_manage_order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_12"
        android:singleLine="true"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/textSize_12" />

    <TextView
        android:id="@+id/tv_item_rv_house_manage_order_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/textSize_12" />

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12" />
</LinearLayout>