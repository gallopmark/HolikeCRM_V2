<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_while"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_18"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_position"
                android:textColor="@color/location"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_location_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@drawable/current_location"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/danger"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:text="@string/report_dealer_rank_danger"
                android:textColor="@color/pos_one"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_position"
                android:textColor="@color/location"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_location_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@drawable/current_location"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/strive"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:text="@string/report_dealer_rank_danger"
                android:textColor="@color/pos_two"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_position"
                android:textColor="@color/location"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_location_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@drawable/current_location"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/potential"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:text="@string/report_dealer_rank_potential"
                android:textColor="@color/pos_three"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_position"
                android:textColor="@color/location"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_location_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@drawable/current_location"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/excellent"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:text="@string/report_dealer_rank_outstanding"
                android:textColor="@color/pos_four"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_position"
                android:textColor="@color/location"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_location_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@drawable/current_location"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/outstanding"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:text="@string/report_dealer_rank_excellence"
                android:textColor="@color/pos_five"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_10" />
</LinearLayout>