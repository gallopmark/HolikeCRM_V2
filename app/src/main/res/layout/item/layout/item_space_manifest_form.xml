<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_from_name"
            style="@style/tv_item_base_customer_black"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_width="75dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:text="标识" />
        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_item_from_content"
            style="@style/tv_item_base_customer_gray"
            android:text="橱柜"
            android:textColor="@color/textColor8"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"/>
    </LinearLayout>

    <View
        android:id="@+id/v_divider"
        style="@style/divider_horizontal"
        android:layout_gravity="bottom" />

</FrameLayout>