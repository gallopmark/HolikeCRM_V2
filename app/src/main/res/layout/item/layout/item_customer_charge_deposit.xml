<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/Customer_Item_TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="@string/customer_name_tips" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/Customer_Item_TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:maxWidth="@dimen/dp_150"
            android:minWidth="@dimen/dp_130"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingEnd="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:text="@string/customer_phone_tips" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_address"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:gravity="center|start"
        android:text="@string/customer_address_tips" />

    <View
        android:id="@+id/v_divider"
        style="@style/divider_horizontal" />
</LinearLayout>