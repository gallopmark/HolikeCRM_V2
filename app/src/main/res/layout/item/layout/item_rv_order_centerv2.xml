<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/bg_corners_white_5dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_orderType"
            style="@style/Order_Item_TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="@string/order_center_type" />

        <TextView
            android:id="@+id/tv_orderStatus"
            style="@style/Order_Item_TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center"
            android:text="@string/order_center_state" />

    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_orderNumber"
        style="@style/Order_Item_TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        android:text="@string/order_number2_tips" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_name"
            style="@style/Order_Item_TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_phone"
            android:layout_toLeftOf="@+id/tv_phone"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center|start"
            android:text="@string/order_name_tips" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/Order_Item_TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_orderTime"
            android:layout_alignLeft="@+id/tv_orderTime"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/order_phone_tips" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/Order_Item_TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/order_address_tips" />

        <TextView
            android:id="@+id/tv_space"
            style="@style/Order_Item_TextViewStyle"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_address"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_orderTime"
            android:layout_toStartOf="@+id/tv_orderTime"
            android:gravity="center|start"
            android:text="@string/order_space_tips" />

        <TextView
            android:id="@+id/tv_orderTime"
            style="@style/Order_Item_TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_space"
            android:layout_alignBottom="@+id/tv_space"
            android:gravity="start|center"
            android:text="@string/order_date_tips" />
    </RelativeLayout>
</LinearLayout>