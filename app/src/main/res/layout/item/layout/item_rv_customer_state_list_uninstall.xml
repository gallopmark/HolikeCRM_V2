<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ShadowBg_Radius6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_6"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_6">

    <LinearLayout
        android:id="@+id/ll_tip_red_uninstall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@drawable/icon_name" />

                <TextView
                    android:id="@+id/tv_item_rv_customer_state_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:text="刘思博"
                    android:textColor="@color/textColor8"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@drawable/icon_phone" />

                <TextView
                    android:id="@+id/tv_item_rv_customer_state_list_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:text="13659478654"
                    android:textColor="@color/textColor14"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@drawable/icon_address" />

                <TextView
                    android:id="@+id/tv_item_rv_customer_state_list_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="金碧世纪花园世纪花园....."
                    android:textColor="@color/textColor8"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@drawable/icon_source" />

                <TextView
                    android:id="@+id/tv_item_rv_customer_state_list_customer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:maxLines="1"
                    android:text="老客户介绍"
                    android:textColor="@color/textColor8"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_rv_customer_state_list_uninstall_signe_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="确图签约：07.11"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_item_rv_customer_state_list_uninstall_order_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="下单日期：08.16"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_rv_customer_state_list_uninstall_guide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="导购：戴孔恩"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_item_rv_customer_state_list_uninstall_designer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="设计师：刘坤杰"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_rv_customer_state_list_uninstall_booking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="预约安装：09.14"
                android:textColor="@color/textColor12"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_item_rv_customer_state_list_uninstall_installer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="安装师：司马小新"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
