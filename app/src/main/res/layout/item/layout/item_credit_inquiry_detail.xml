<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="351">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="127">

            <TextView
                android:id="@+id/tv_order_number"
                style="@style/tv_item_base_customer_gray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:lineSpacingExtra="0dp"
                android:text="BZ13600000-1901062167"
                android:textColor="@color/textColor14" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100">

            <TextView
                android:id="@+id/tv_factory_price_before_discount"
                style="@style/tv_item_base_customer_gray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7186.56" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="124">

            <TextView
                android:id="@+id/tv_factory_price_after_discount"
                style="@style/tv_item_base_customer_gray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="7006.56" />
        </FrameLayout>


    </LinearLayout>

    <View style="@style/divider_horizontal" android:layout_gravity="bottom" />
</FrameLayout>
