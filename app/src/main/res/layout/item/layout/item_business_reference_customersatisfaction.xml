<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/color_while"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_satisfaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        android:text="@string/customer_satisfaction_tips"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/textSize_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_service_satisfaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/customer_satisfaction_service2"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_delivery_satisfaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/customer_satisfaction_delivery2"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>

        <View style="@style/divider_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_design_satisfaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/customer_satisfaction_design2"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_install_satisfaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/customer_satisfaction_install2"
                android:textColor="@color/textColor8"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>