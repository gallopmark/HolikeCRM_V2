<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_corners_white_5dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <include
        android:id="@+id/title_layout"
        layout="@layout/item_customer_manager_title" />

    <TextView
        android:id="@+id/tv_reservation_date"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/followup_reservation_date_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/tv_install_area"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/followup_installation_area"
        app:layout_constraintStart_toEndOf="@+id/tv_reservation_date"
        app:layout_constraintTop_toTopOf="@+id/tv_reservation_date" />

    <TextView
        android:id="@+id/tv_installer_tips"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/followup_installation_master"
        android:textSize="@dimen/textSize_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reservation_date" />

    <TextView
        android:id="@+id/tv_installer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_installer_tips"
        app:layout_constraintTop_toTopOf="@+id/tv_installer_tips" />

    <TextView
        android:id="@+id/tv_remark_tips"
        style="@style/Customer_Item_TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/tips_customer_remark2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_installer" />

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/textColor4"
        android:textSize="@dimen/textSize_13"
        app:layout_constraintBottom_toTopOf="@+id/tv_edit_uninstall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_remark_tips"
        app:layout_constraintTop_toTopOf="@+id/tv_remark_tips" />

    <TextView
        android:id="@+id/tv_edit_uninstall"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/bg_bg_corners4dp"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:text="@string/edit"
        android:textColor="@color/textColor14"
        android:textSize="@dimen/textSize_14"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_remark" />
</androidx.constraintlayout.widget.ConstraintLayout>
