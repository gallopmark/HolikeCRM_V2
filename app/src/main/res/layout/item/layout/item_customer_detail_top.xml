<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mHouseRv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24" />

    <LinearLayout
        android:id="@+id/itemContainer"
        style="@style/Customer_ItemStyle"
        android:layout_marginTop="@dimen/dp_minus_7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:src="@drawable/icon_address" />

            <TextView
                android:id="@+id/tv_house_manage_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_customer_detail_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:text="编辑"
                android:textColor="@color/textColor14"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_3"
                android:rotation="270"
                android:src="@drawable/choice_down"
                android:tint="@color/textColor14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@drawable/icon_name" />

            <TextView
                android:id="@+id/tv_house_manage_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/textColor12"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12" />
    </LinearLayout>
</LinearLayout>