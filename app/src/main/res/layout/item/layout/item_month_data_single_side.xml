<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="@dimen/dp_44"
        android:orientation="horizontal">

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_customer_name"
            style="@style/Scrollable_TextViewStyle2"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:text="@string/tips_customer_name"
            android:textColor="@color/textColor8" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_receipt_category"
            style="@style/Scrollable_TextViewStyle2"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:textColor="@color/textColor8" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_receipt_amount"
            style="@style/Scrollable_TextViewStyle2"
            android:layout_width="@dimen/dp_90"
            android:layout_height="match_parent"
            android:textColor="@color/textColor8" />

        <View style="@style/divider_vertical" />

        <TextView
            android:id="@+id/tv_receipt_time"
            style="@style/Scrollable_TextViewStyle2"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:textColor="@color/textColor8" />

        <View style="@style/divider_vertical" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />
</LinearLayout>
