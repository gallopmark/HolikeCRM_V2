<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ShadowBg_Radius6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_place_order_time"
            style="@style/tv_item_base_customer_black_small"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:text="@string/bill_list_place_order_of_time" />

        <TextView
            android:id="@+id/tv_order_status"
            style="@style/tv_item_base_customer_black_small"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="@string/bill_list_order_statue" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_reference"
                style="@style/tv_item_base_customer_gray"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableLeft="@drawable/icon_number"
                android:drawablePadding="@dimen/dp_8"
                android:textColor="@color/textColor5"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_store_name"
                style="@style/tv_item_base_customer_gray"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_13"
                android:drawableLeft="@drawable/icon_money"
                android:drawablePadding="@dimen/dp_8"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_order_money"
                style="@style/tv_item_base_customer_gray"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableLeft="@drawable/icon_money"
                android:drawablePadding="@dimen/dp_8"
                android:textStyle="normal" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_28"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/bg_states_blue"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>

