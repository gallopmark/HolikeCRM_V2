<?xml version="1.0" encoding="utf-8"?>
<com.holike.crm.customView.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bill_photo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/receive_deposit_addBills"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/textSize_10" />

        <TextView
            android:id="@+id/tv_must"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_3"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/tips_must_fill_in"
            android:textColor="@color/bg_homepage_new"
            android:textSize="@dimen/textSize_14"
            android:visibility="gone" />
    </LinearLayout>

</com.holike.crm.customView.SquareLayout>